            <br />
            @Html.DisplayFor(modelItem => item.MorningtimeDay2startlec)<b>-</b>@Html.DisplayFor(modelItem => item.MorningtimeDay2endlec)
        </td>
    }
}
            else
            {

                <td class="text-center">-----</td>
            }
            @if (Html.DisplayFor(modelItem => item.MorningtimeDay1).ToString().Equals("Wednesday") || Html.DisplayFor(modelItem => item.MorningtimeDay2).ToString().Equals("Wednesday"))
{
    if (Html.DisplayFor(modelItem => item.MorningtimeDay1).ToString().Equals("Wednesday"))
