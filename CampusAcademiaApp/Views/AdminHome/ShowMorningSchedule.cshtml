        </td>
    }
            }
            else
            {
                
                <td class="text-center">-----</td>
            }
            @if (Html.DisplayFor(modelItem => item.MorningtimeDay1).ToString().Equals("Thursday") || Html.DisplayFor(modelItem => item.MorningtimeDay2).ToString().Equals("Thursday"))
            {
                if (Html.DisplayFor(modelItem => item.MorningtimeDay1).ToString().Equals("Thursday"))
                {
             <td class="text-center">
   
