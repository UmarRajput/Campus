                <td class="text-center">-----</td>
            }
            @if (Html.DisplayFor(modelItem => item.MorningtimeDay1).ToString().Equals("Saturday") || Html.DisplayFor(modelItem => item.MorningtimeDay2).ToString().Equals("Saturday"))
            {
                if (Html.DisplayFor(modelItem => item.MorningtimeDay1).ToString().Equals("Saturday"))
                {
            <td class="text-center">
   
            @Html.DisplayFor(modelItem => item.SubjectTitle)
            <br />
            @Html.DisplayFor(modelItem => item.MorningtimeDay1startlec)<b>-</b>@Html.DisplayFor(modelItem => item.MorningtimeDay1endlec)
        </td>
                }
                if (Html.DisplayFor(modelItem => item.MorningtimeDay2).ToString().Equals("Saturday"))
                {
            <td class="text-center">
   
            @Html.DisplayFor(modelItem => item.SubjectTitle)
            <br />
            @Html.DisplayFor(modelItem => item.MorningtimeDay2startlec)<b>-</b>@Html.DisplayFor(modelItem => item.MorningtimeDay2endlec)
        </td>
                }
           
            }
            else
            {
                
                <td class="text-center">-----</td>
            }  
        </tr>
        }
        </table>
    </div>
</div>