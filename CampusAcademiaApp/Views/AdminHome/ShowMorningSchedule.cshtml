            }
            @if (Html.DisplayFor(modelItem => item.MorningtimeDay1).ToString().Equals("Friday") || Html.DisplayFor(modelItem => item.MorningtimeDay2).ToString().Equals("Friday"))
            {
                if (Html.DisplayFor(modelItem => item.MorningtimeDay1).ToString().Equals("Friday"))
                {
