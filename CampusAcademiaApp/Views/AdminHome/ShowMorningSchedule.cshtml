            @Html.DisplayFor(modelItem => item.MorningtimeDay1startlec)<b>-</b>@Html.DisplayFor(modelItem => item.MorningtimeDay1endlec)
        </td>
                }
                if (Html.DisplayFor(modelItem => item.MorningtimeDay2).ToString().Equals("Thursday"))
                {
            <td class="text-center">
   
